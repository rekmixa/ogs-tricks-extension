{
	"manifest_version": 3,
	"version": "0.3.0",
	"name": "OGS Tricks",
	"description": "OGS Tricks Extension",
	"content_scripts": [
		{
			"matches": [
				"https://online-go.com/*"
			],
			"css": [
				"styles.css"
			]
		},
		{
			"matches": [
				"https://online-go.com/*"
			],
			"js": [
				"lib/gif.js",
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"host_permissions": [
		"https://online-go.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		"storage",
		"scripting",
		"webNavigation",
		"tabs",
		"activeTab",
		"downloads"
	]
}
